<!DOCTYPE html>
<html>
    <head>
        {% block head %}
            <meta charset="UTF-8">
            <title>{% block title %} LARP Calendar {% endblock %}</title>
            <link rel="icon" href="http://cdn.onlinewebfonts.com/svg/img_99208.png" type="image/x-icon" sizes="16x16">

            {% block stylesheets %}
                {#bootstrap#}
                <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
                {#Font Awesome#}
                <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
                {#custom css#}
                <link rel="stylesheet" href="/css/style.css">
            {% endblock %}
        {% endblock %}
    </head>

    <body>
        {% block body %}
            <div class="container-fluid">
                {% block navbar %}
                    <nav class="navbar navbar-light bg-white">
                        <h1 class=" header"> LARP Calendar</h1>

                        <ul class="navbar nav navbar-light justify-content-end" >
                            <li class="nav-item active">
                                <a class="nav-link text-dark" href="{{ path('home') }}">Recently added</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Events</a>
                                <div class="dropdown-menu ">
                                    <a class="dropdown-item " href="{{ path('list_events') }}">List</a>
                                    <a class="dropdown-item " href="#">Calendar</a>
                                    <a class="dropdown-item" href="#">Find event</a>
                                </div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="{{ path('new_event') }}">Add event</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="#">About project</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="#">Contacts</a>
                            </li>
                            </ul>
                    </nav>
                    <hr/>
                {% endblock %}

                {% block flashes %}
                    {% for message in app.flashes('notice') %}
                        <div class="alert alert-warning alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endblock %}

                {% block page_heading %}
                    <div class="row " >
                        <h2 class="sub-header text-center">{% block heading %}{% endblock %}</h2>
                    </div>
                {% endblock %}

                {% block content %}
                {% endblock %}

                {% block footer %}
                    <footer class="page-footer fixed-bottom font-small bg-dark text-light">
                        <div class="footer-copyright text-center py-3">
                            LARP Calendar takes no responsibility for the services provided by event organisers, nor does it make any guarantees or assurances about them.
                        </div>
                    </footer>
                {% endblock %}

                {% block javascripts %}
                    {#external libraries#}
                    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
                    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
                    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
                {% endblock %}
            </div>
        {% endblock %}
    </body>
</html>
