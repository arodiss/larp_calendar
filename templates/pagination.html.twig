{% if pageCount > 1 %}
    <div class="row">
        <div class="col">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-end">
                    {% if page != 1 %}
                        <li class="page-item"><a class="page-link text-dark bg-light" href="?page={{ page-1 }}">{{ '<'}}</a></li>
                        <li class="page-item"><a class="page-link text-dark bg-light" href="?page=1">1</a></li>
                    {% endif %}
                    {% if page >= 4 %}
                        <li class="page-item disabled"><a class="page-link text-muted" href="#">...</a></li>
                    {% endif %}
                    {% if page >= 3 %}
                        <li class="page-item"><a class="page-link text-dark bg-light" href="?page={{ page - 1 }}">{{ page - 1 }}</a></li>
                    {% endif %}
                    <li class="page-item active"><a class="page-link text-light brand-bg" href="#">{{ page }}</a></li>
                    {% if pageCount - page >= 2 %}
                        <li class="page-item"><a class="page-link text-dark bg-light" href="?page={{ page + 1 }}">{{ page + 1 }}</a></li>
                    {% endif %}
                    {% if pageCount - page >= 3 %}
                        <li class="page-item disabled"><a class="page-link text-muted" href="#">...</a></li>
                    {% endif %}
                    {% if page != pageCount %}
                        <li class="page-item"><a class="page-link text-dark bg-light" href="?page={{ pageCount }}">{{ pageCount }}</a></li>
                        <li class="page-item"><a class="page-link text-dark bg-light" href="?page={{ page + 1 }}">{{ '>'}}</a></li>
                    {% endif %}
                </ul>
            </nav>
        </div>
    </div>    
{% endif %}
